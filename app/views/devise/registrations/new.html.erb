<div class="text-center" style="margin-top: 50px; margin-bottom: 10px">
  <h2>Sign up</h2>

  <div class="container d-flex justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "text-center" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control smaller-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control smaller-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control smaller-input" %>
      </div>

      <div class="form-group">
        <%= label :user, :name %><br />
        <%= text_field :user, :name, autofocus: true, class: "form-control smaller-input" %>
      </div>

      <div class="form-group">
        <%= label :user, :surname %><br />
        <%= text_field :user, :surname, class: "form-control smaller-input" %>
      </div>

      <div class="actions" style="margin-top: 10px">
        <%= f.submit "Sign up", class: "btn btn-dark btn-sm" %>
      </div>
    <% end %>
  </div>
</div>

<style>
    .smaller-input {
        max-width: 300px;
    }
</style>



<%= render "devise/shared/links" %>
